<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/mainbackground">

    <View
        android:id="@+id/cancel_clos"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="349dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/cancel"
        android:onClick="closeWindow" />

    <TextView
        android:id="@+id/times_alert"
        android:layout_width="157dp"
        android:layout_height="113dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:text="Times Alert"
        android:textSize="40sp"
        android:textColor="#FFF"
        android:gravity="top"
        />

    <View
        android:id="@+id/clock_icon_"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="224dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/bigclock"
        />

    <TextView
        android:id="@+id/adjust_the_"
        android:layout_width="363dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="240dp"
        android:gravity="top"
        android:text="Adjust the time at which point you will get the notification."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <View
        android:id="@+id/start_time_btn"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/raius"
        android:onClick="openStartClock"

        tools:ignore="SpeakableTextPresentCheck" />

    <TextView

        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="359dp"
        android:gravity="center"
        android:text="Start Time"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <View
        android:id="@+id/end_time_btn"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/raius"
        android:onClick="openEndClock"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView

        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="439dp"
        android:gravity="center"
        android:text="End Time"
        android:textColor="#FFF"
        android:textSize="25sp" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"
        android:text="Start Time:"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/time_received_start"
        android:layout_width="114dp"
        android:layout_height="44dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="520dp"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="560dp"
        android:text="End Time:"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/time_received_end"
        android:layout_width="114dp"
        android:layout_height="44dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="560dp"
        android:textColor="#FFF"
        android:textSize="20dp" />


    <View
        android:id="@+id/logout_btn"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="719dp"
        android:background="@drawable/raius"

        android:onClick="saveTime" />

    <TextView
        android:id="@+id/save"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="171dp"
        android:layout_marginTop="724dp"
        android:gravity="top"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="30sp" />


</RelativeLayout>