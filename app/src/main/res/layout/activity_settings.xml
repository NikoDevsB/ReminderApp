<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/mainbackground">

    <!-- Settings -->

    <TextView
        android:id="@+id/settings"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="93dp"
        android:gravity="top"
        android:text="Settings"
        android:textColor="#FFFF"
        android:textSize="40sp" />


    <View
        android:id="@+id/change_radius"
        android:layout_width="340dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/raius" />


    <TextView
        android:id="@+id/change_radi"
        android:layout_width="223dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="245dp"
        android:gravity="center"
        android:text="Change Radius Range"
        android:textColor="#FFFF"
        android:textSize="27sp" />
    <View
        android:id="@+id/map_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="303dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="266dp"
        android:background="@drawable/location"
        />

    <View
        android:id="@+id/time_alert"
        android:layout_width="340dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="393dp"
        android:background="@drawable/raius"

        />

    <TextView
        android:id="@+id/change_time"
        android:layout_width="223dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="395dp"
        android:gravity="center"
        android:text="Change Times Alert"
        android:textColor="#fff"
        android:textSize="28sp" />

    <View
        android:id="@+id/time_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="303dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="419dp"
        android:background="@drawable/clock"
        />

    <View
        android:id="@+id/rectangle_1"
        android:onClick="openMedia"
        android:layout_width="340dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="542dp"
        android:background="@drawable/raius"

        />
    <!-- Change Sound Alert -->

    <!-- Play 1 -->
    <TextView
        android:id="@+id/change_soun"
        android:layout_width="223dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="544dp"
        android:gravity="center"
        android:text="Change Sound Alert"
        android:textColor="#FFFF"

        android:textSize="28sp" />

    <View
        android:id="@+id/play_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="303dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="568dp"
        android:background="@drawable/media"
        />
    <!-- Rectangle 12 -->
    <View

        android:id="@+id/logout_btn"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="719dp"

        android:background="@drawable/raius" />

    <TextView
        android:id="@+id/save"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="719dp"
        android:gravity="center"
        android:onClick="saveAllSetings"
        android:text="Go Back"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>