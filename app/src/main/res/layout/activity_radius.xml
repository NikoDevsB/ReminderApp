<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/mainbackground">

    <View
        android:id="@+id/cancel_clos"
        android:onClick="closeWindow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="349dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/cancel" />

    <TextView
        android:id="@+id/radius_rang"
        android:layout_width="157dp"
        android:layout_height="113dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:text="Raidus Range"
        android:textColor="#FFFF"
        android:textSize="40sp"

        android:gravity="top"
        />

    <View
        android:id="@+id/circle_map_"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="224dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:background="@drawable/radiuslogo"
        />

    <TextView
        android:id="@+id/adjust_the_"
        android:layout_width="363dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="256dp"
        android:gravity="top"
        android:text="Adjust the distnace at which point you will get the notification."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic" />
    <SeekBar
        style="@android:style/Widget.Material.Light.SeekBar"
        android:id="@+id/seekbar"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:splitTrack="false"

        android:layout_marginLeft="38dp"
        android:layout_marginTop="381dp"
        android:max="50"
        android:progress="0"

        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/thumb" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="226dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="418dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="30sp"

        />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="721dp"
        android:background="@drawable/raius"
        android:onClick="saveRadius"

        />

    <TextView
        android:id="@+id/save"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="727dp"
        android:gravity="top"
        android:text="Save"
        android:textColor="#FFFF"
        android:textSize="30sp" />


</RelativeLayout>